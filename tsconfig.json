{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "allowJs": false,
        "skipLibCheck": true,
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "@assets/*": [
                "./src/_assets/*"
            ],
            "@styles/*": [
                "./src/_styles/*"
            ],
            "@base/*": [
                "./src/_styles/base.scss"
            ],
            "@colors/*": [
                "./src/_styles/colors.scss"
            ],

            "@app.common/*" : [
                "./src/app/_common/*"
            ],
            "@app.start/*" : [
                "./src/app/_start/*"
            ],
            "@app.admin/*" : [
                "./src/app/admin/*"
            ],
            "@app.student/*" : [
                "./src/app/student/*"
            ],
            "@app.teacher/*" : [
                "./src/app/teacher/*"
            ],

            "@api/*": [
                "./src/core/api/*"
            ],
            "@context/*": [
                "./src/core/context/*"
            ],
            "@models/*": [
                "./src/core/models/*"
            ],
            "@routing/*": [
                "./src/core/routing/*"
            ],
            "@services/*": [
                "./src/core/services/*"
            ],

            "@components/*": [
                "./src/shared/components/*"
            ],
            "@const/*": [
                "./src/shared/constants/*"
            ],
            "@hooks/*": [
                "./src/shared/hooks/*"
            ],
            "@utils/*": [
                "./src/shared/utilities/*"
            ],

            "@store/*": [
                "./src/store/*"
            ],
        }
    },
    "include": [
        "src",
        "src/_assets",
        "src/_styles",
        "src/app",
        "src/app/_common",
        "src/app/_start",
        "src/app/admin",
        "src/app/student",
        "src/app/teacher",
        "src/core",
        "src/core/api",
        "src/core/context",
        "src/core/models",
        "src/core/routing",
        "src/core/services",
        "src/shared",
        "src/shared/components",
        "src/shared/constants",
        "src/shared/hooks",
        "src/shared/utilities",
        "src/store",
    ],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}
